<?xml version="1.0" encoding="UTF-8"?>

<configuration status="error" monitorInterval="5">
    <Properties>
        <Property name="log.path">/home/cloud/logs</Property>
        <Property name="past_log.path">${log.path}</Property>
        <Property name="PROJECT">smart-cloud-gateway</Property>
        <Property name="SYSTEM">GATEWAY</Property>
        <property name="FILESIZE">50MB</property>
    </Properties>

    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%date{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="Rolling-error" fileName="${log.path}/error.log"
                     filePattern="${past_log.path}/%d{yyyy-MM-dd}/error-%d{yyyy-MM-dd-HH}-%i.log" immediateFlush="true">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${FILESIZE}"/>
            </Policies>
        </RollingFile>
        <RollingFile name="Rolling-all" fileName="${log.path}/${PROJECT}.log"
                     filePattern="${past_log.path}/%d{yyyy-MM-dd}/${SYSTEM}_${PROJECT}-%d{yyyy-MM-dd.HH}-%i.log"
                     immediateFlush="true">
            <PatternLayout>
                <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${FILESIZE}"/>
            </Policies>
        </RollingFile>
    </appenders>

    <Loggers>
        <Logger name="com.scframework.smartcloudgateway" level="info" additivity="false">
            <appender-ref ref="Rolling-all"/>
        </Logger>

        <root level="error">
            <appender-ref ref="Rolling-all"/>
        </root>
    </Loggers>
</configuration>
